# Backend Environment Variables

# Ambiente
NODE_ENV=development

# Server
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=prima_nota
DB_USER=postgres
